generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Student{
    id String @id
    name String
    email String
    password String
    contact String
    class String
    year Int
    department String
    op Outpass[]
    staffId1 String
    staff1 Staff @relation("Staff1",fields: [staffId1],references: [id])
    hodId String
    hod HOD @relation(fields: [hodId],references: [id])
    staffId2 String
    staff2 Staff @relation("Staff2",fields: [staffId2],references: [id])
}

model Outpass{
    id String @id @default(uuid())
    rollNo String
    student Student @relation(fields: [rollNo],references: [id])
    startDate String
    endDate   String
    outTime String
    inTime  String
    reason String
    hostelBlock String
    advisorApproved Boolean @default(false)
    hodApproved Boolean @default(false)
    wardApproved Boolean @default(false)
}

model Staff{
    id String @id
    email String @unique
    password String
    designation String
    name String
    department String
    class String
    year String
    primarystudent Student[] @relation("Staff1")
    secondarystudent Student[] @relation("Staff2")
}
model HOD{
    id String @id
    email String @unique
    password String
    department String
    name String
    student Student[]
}


model Warden{
    email String @id
    password String
    name String
}

